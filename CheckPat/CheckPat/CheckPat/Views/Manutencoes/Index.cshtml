@using Microsoft.EntityFrameworkCore;

@model List<CheckPat.Models.Patrimonio>


<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/bootstrap.min.css">
    <meta name="viewport" content="width=device-width" />
    <title>Manutenção</title>
</head>
<body>
    <!-- Menu de navegação-->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #00008B;">
        <a class="navbar-brand" style="padding-left: 108px;" asp-controller="Manutencoes" asp-action="Index" >CheckPat</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Manutencoes" asp-action="Index">Manutenção</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Locais" asp-action="Index">Locais</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Equipamentos" asp-action="Index">Equipamentos</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Patrimonios" asp-action="Index">Patrimônios</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Relatorios" asp-action="Index">Relatórios</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Manutencoes" asp-action="Login">Sair</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" asp-controller="Manutencoes" asp-action="Buscar" method="post">
                <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search" name="numero">
                <input class="btn btn-outline-light my-2 my-sm-0" type="submit" value="Buscar" />
            </form>
        </div>
    </nav>

    <br /> <br />

    <div style="padding-left: 120px; width: 1500px;">

        <h2>Manutenção</h2>
        <hr />


        <table class="table table-striped table-hover">
            <thead>

                <tr class="p-3 mb-2 " style="background-color: #00008B; color: #ffffff;">
                    <th scope="col">Id</th>
                    <th scope="col">Patrimônio</th>
                    <th scope="col">Numero de série</th>
                    <th scope="col">Local</th>
                    <th scope="col">Equipamento</th>
                    <th scope="col">Coordenadas</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Observação</th>
                    <th scope="col">Manutenção</th>
                    <th></th>
                </tr>


            </thead>
            <tbody>
                @foreach (var patrimonio in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.NumeroPatrimonio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.NumeroSerie)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Local.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Equipamento.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Coordenadas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Usuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Observacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => patrimonio.Manutencao)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@patrimonio.Id">Editar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
