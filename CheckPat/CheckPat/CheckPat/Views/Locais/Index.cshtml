@model List<CheckPat.Models.Local>

@{

    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/bootstrap.min.css">
    <meta name="viewport" content="width=device-width" />
    <title>Locais</title>
</head>
<body>

    <!-- Menu de navegação-->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #00008B;">
        <a class="navbar-brand" style="padding-left: 108px;" href="#">CheckPat</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Manutencoes" asp-action="Index">Manutenção</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Locais" asp-action="Index">Locais</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Equipamentos" asp-action="Index">Equipamentos</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Patrimonios" asp-action="Index">Patrimônios</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Relatorios" asp-action="Index">Relatórios</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Manutencoes" asp-action="Login">Sair</a>
                </li>


            </ul>
            <form class="form-inline my-2 my-lg-0" asp-controller="Locais" asp-action="Buscar" method="post">
                <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search" name="nome">
                <input class="btn btn-outline-light my-2 my-sm-0" type="submit" value="Buscar" />
            </form>
        </div>
    </nav>

    <br /> <br />

    <div style="padding-left: 120px; width: 1500px;">

        <h2>Locais</h2>
        <hr />

        <p>
            <a asp-action="Adicionar" style="background-color: #00008B" class="btn btn-primary">Adicionar</a>
        </p>

        <table class="table table-striped table-hover">
            <thead>

                <tr class="p-3 mb-2 " style="background-color: #00008B; color: #ffffff;">
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var local in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => local.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => local.Nome)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@local.Id">Editar</a>
                            <a asp-action="Detalhes" asp-route-id="@local.Id">Detalhes</a>
                            <a asp-action="Deletar" asp-route-id="@local.Id" onclick="return confirm('Deseja realmente excluir o local:  @local.Nome ?')">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
    </div>
</body>
</html>
